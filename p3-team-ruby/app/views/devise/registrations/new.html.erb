<%= stylesheet_link_tag 'login' %>
<div class="flex flex-col min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full h-[600px] max-w-lg max-h-lg bg-white p-8 rounded-xl shadow mt-[-50px]">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="w-10/12 mx-auto">
        <h1 class="tracking-wide font-medium text-left text-3xl ml-[-4px] mt-8 mb-2">Create an Account</h1>
        <h3 class="text-gray-500 text-xs text-left mb-[55px]">Sign up to connect with your friends!</h3>
      </div>
      <div class="flex flex-col items-center">
        <div class="field mb-6 w-10/12 mt-2">
          <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email", class: "w-full p-3 rounded-xl border-transparent bg-gray-100 focus:bg-white focus:border-purple-400 focus:outline-none focus:border-l-4 focus:border-purple-500 placeholder:text-xs input-placeholder mb-3" %>
        </div>
        <div class="field mb-4 w-10/12">
          <%= f.password_field :password, placeholder: "password (#{@minimum_password_length} characters minimum)", autocomplete: "new-password", class: "w-full p-3 rounded-xl border-transparent bg-gray-100 focus:bg-white focus:border-purple-400 focus:outline-none focus:border-l-4 focus:border-purple-500 placeholder:text-xs input-placeholder" %>
        </div>
        <div class="field mb-4 w-10/12">
          <%= f.password_field :password_confirmation, placeholder: "confirm Password", autocomplete: "new-password", class: "w-full p-3 rounded-xl border-transparent bg-gray-100 focus:bg-white focus:border-purple-400 focus:outline-none focus:border-l-4 focus:border-purple-500 placeholder:text-xs input-placeholder" %>
        </div>
        <div class="w-10/12 flex justify-between mt-8">
          <div class="action w-5/12 ml-2">
            <%= f.submit "Sign up", class: "btn-primary btn-large w-full text-center block py-2 px-2 bg-purple-500 border border-purple-500 text-white rounded-xl hover:bg-white hover:border-purple-500 hover:text-purple-500" %>
          </div>
          <div class="action w-5/12 mr-2">
            <%= link_to "Login", new_session_path(resource_name), class: "btn-primary btn-large w-full text-center block py-2 px-2 bg-white border border-purple-500 text-purple-500 rounded-xl hover:bg-purple-500 hover:border-purple-400 hover:text-white" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>